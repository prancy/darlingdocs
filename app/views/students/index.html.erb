<h1>All Students</h1>

<ul>
    <% @students.each do |student| %>
        <li>
            <strong><%= link_to student.name, student_path(student) %> | 
<%= link_to "Edit student!", edit_student_path(student) %>            <%= link_to "Delete this student", students_path(@student), method: :delete, data: { confirm: "Are you sure you want to delete this student?"} %>
            </strong> - <%= student.age %> <%= student.gender %> 
        </li>
    <% end %>
</ul>

