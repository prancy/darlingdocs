<h1>This is <%= @student.name %>'s Progress </h1>

<p>
  <strong>Name: </strong>
  <%= @student.name %>
</p>
<p>
  <strong>Age: </strong>
  <%= @student.age %>
</p>
<p>
  <strong>Gender: </strong>
  <%= @student.gender %>
</p>



<h1>Reports</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Participation</th>
      <th>Behavior</th>
      <th>Homework</th>
    </tr>
  </thead>
  <tbody>
    <% @student.reports.each do |report| %>
      <tr>
        <td><%= report.created_at %></td>
        <td><%= report.participation %></td>
        <td><%= report.behavior %></td>
        <td><%= report.homework %></td>
      </tr>
    <% end %>
    <%= link_to '<button class="button">Add a Report</button>'.html_safe, new_student_report_path(@student) %>
  </tbody>
</table>
